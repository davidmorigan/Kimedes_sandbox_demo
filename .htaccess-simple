# Minimal .htaccess for Ionos
RewriteEngine On

# Handle React Router - redirect all requests to index.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.html [L]

# Allow access to all files
<Files "*">
    Order allow,deny
    Allow from all
</Files>
